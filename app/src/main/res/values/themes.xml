<resources>
    <!-- Base application theme -->
    <style name="Theme.Entriqs" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/purple_500</item>
        <!-- Ensure TextInputLayout uses the correct style -->
        <item name="textInputStyle">@style/Widget.Entriqs.TextInputLayout.OutlinedBox</item>
    </style>

    <!-- Custom style for TextInputLayout -->
    <style name="Widget.Entriqs.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/dark_purple</item>
        <item name="hintTextColor">@color/dark_purple</item>
        <item name="android:textColorHint">@color/dark_purple</item>
        <item name="hintTextAppearance">@style/TextAppearance.Entriqs.Hint</item>
    </style>

    <!-- Hint text appearance -->
    <style name="TextAppearance.Entriqs.Hint" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
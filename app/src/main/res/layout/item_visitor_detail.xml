<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/visitorPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:contentDescription="Visitor Photo"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/visitorIdLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visitor ID:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_purple" />

        <TextView
            android:id="@+id/visitorId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="N/A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/visitorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"
                android:text="N/A" />

            <TextView
                android:id="@+id/nameEditedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edited"
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/checkInTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Check-In: N/A" />

        <TextView
            android:id="@+id/checkOutTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:text="Check-Out: N/A" />

        <TextView
            android:id="@+id/visitorStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Status: N/A" />

        <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Phone:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_purple"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/visitorPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text="N/A" />

            <TextView
                android:id="@+id/phoneEditedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edited"
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/purposeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Purpose:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_purple"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/visitorPurpose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text="N/A" />

            <TextView
                android:id="@+id/purposeEditedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edited"
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/destinationLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Destination:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_purple"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/visitorDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text="N/A" />

            <TextView
                android:id="@+id/destinationEditedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edited"
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/idNumberLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ID Number:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_purple"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/visitorIdNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text="N/A" />

            <TextView
                android:id="@+id/idNumberEditedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edited"
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Edit Details"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="12dp"
            app:strokeColor="@color/dark_purple"
            app:strokeWidth="1dp"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>